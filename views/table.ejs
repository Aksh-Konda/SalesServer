<div class="card-body table-responsive p-0 h-100">
    <table class="table table-striped table-dark table-head-fixed text-nowrap">
        <thead>
            <tr>
                <th style="width: 10%">Product ID</th>
                <th style="width: 10%">Brand</th>
                <th style="width: 10%">Category</th>
                <th style="width: 10%">Name</th>
                <th style="width: 10%">Size</th>
                <th style="width: 15%">Quantity</th>
                <th style="width: 10%">Cost Price</th>
                <th style="width: 10%">Selling Price</th>
                <th style="width: 20%"> </th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i<fw.length; i++) { %>
                <tr>
                    <td><%= fw[i].pid %></td>
                    <td><%= fw[i].brand %></td>
                    <td><%= fw[i].category %></td>
                    <td><%= fw[i].name %></td>
                    <td><%= fw[i].size %></td>
                    <td><%= fw[i].quantity %></td>
                    <td><%= fw[i].cost_price %></td>
                    <td><%= fw[i].selling_price %></td>
                    <td class="project-actions text-right">
                        <a class="btn btn-info btn-sm py-2" href="/edit/<%= fw[i].pid %>"><i class="fas fa-pencil-alt py-1"></i> Edit</a>
                        <a class="btn btn-danger btn-sm py-2" href="/delete/<%= fw[i].pid %>"><i class="fas fa-trash py-1"></i> Delete</a>
                    </td>
                </tr>
            <%  } %>
        </tbody>
    </table>
</div>