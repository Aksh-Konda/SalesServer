<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">
            <% if(op == "edit") { %>
                Edit Stock Details
            <% } %>
            <% if(op == "add") { %>
                Add New Stock Details
            <% } %>
        </h3>
        <!-- <div class="card-tools"> -->
            <!-- Buttons, labels, and many other things can be placed here! -->
            <!-- Here is a label for example -->
            <!-- <span class="badge badge-primary">Label</span>
        </div> -->
        <!-- /.card-tools -->
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form action="/sales/<%=op%>" method="POST" id="details">
            <div class="form-group row">
                <label for="pid" class="col-sm-2 col-form-label">Product Id</label>
                <div class="col-sm-10">
                    <% if(op == "edit") { %> 
                    <input type="number" readonly class="form-control-plaintext" name="pid" id="pid" value="<%=fw.pid%>">
                    <% } %>
                    <% if(op == "add") { %> 
                    <input type="number" class="form-control" name="pid" id="pid" required>
                    <% } %>
                </div>
            </div>

            <div class="form-group row">
                <label for="brand" class="col-sm-2 col-form-label">Brand</label>
                <div class="col-sm-10">
                    <% if(op == "edit") { %> 
                    <input type="text" readonly class="form-control-plaintext" name="brand" id="brand" value="<%=fw.brand%>">
                    <% } %>
                    <% if(op == "add") { %> 
                    <input type="text" class="form-control" id="brand" name="brand">
                    <% } %>
                </div>
            </div>

            <div class="form-group row">
                <label for="category" class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">
                    <% if(op == "edit") { %> 
                    <input type="text" readonly class="form-control-plaintext" name="category" id="category" value="<%=fw.category%>">
                    <% } %>
                    <% if(op == "add") { %> 
                    <input type="text" class="form-control" name="category" id="category">
                    <% } %>
                </div>
            </div>

            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <% if(op == "edit") { %> 
                    <input type="text" readonly class="form-control-plaintext" name="name" id="name" value="<%=fw.name%>">
                    <% } %>
                    <% if(op == "add") { %> 
                    <input type="text" class="form-control" name="name" id="name">
                    <% } %>
                </div>
            </div>

            <div class="form-group row">
                <label for="size" class="col-sm-2 col-form-label">Size</label>
                <div class="col-sm-10">
                    <% if(op == "edit") { %> 
                    <input type="number" readonly class="form-control-plaintext" name="size" id="size" value="<%=fw.size%>">
                    <% } %>
                    <% if(op == "add") { %> 
                    <input type="number" class="form-control" name="size" id="size">
                    <% } %>
                </div>
            </div>

            <div class="form-group row">
                <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="quantity" id="quantity" value="<%=op === "edit" ? fw.quantity : 0%>">
                </div>
            </div>

            <div class="form-group row">
                <label for="cost_price" class="col-sm-2 col-form-label">Cost Price</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="cost_price" id="cost_price" value="<%=op === "edit" ? fw.cost_price : 0%>">
                </div>
            </div>

            <div class="form-group row">
                <label for="selling_price" class="col-sm-2 col-form-label">Selling Price</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="selling_price" id="selling_price" value="<%=op === "edit" ? fw.selling_price : 0%>">
                </div>
            </div>
        </form>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <div class="form-group row justify-content-between">
            <div class="col-auto">
                <button type="submit" class="btn btn-md btn-primary" style="padding-left: 50px; padding-right: 50px;" form="details">Save</button>
            </div>  
            <div class="col-auto">
                <a href="/" class="btn btn-md btn-danger" style="padding-left: 50px; padding-right: 50px;">Cancel</a>
            </div>
        </div>
    </div>
    <!-- /.card-footer -->
</div>
<!-- /.card -->